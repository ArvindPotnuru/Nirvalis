# Copy to .env.production for production builds

# Domain Configuration
REACT_APP_DOMAIN=localhost:3000
REACT_APP_PRODUCTION_DOMAIN=nirvalis.com
REACT_APP_API_URL=

# Site Configuration
REACT_APP_SITE_NAME=Nirvalis
